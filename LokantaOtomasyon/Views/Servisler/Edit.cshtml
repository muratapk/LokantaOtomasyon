@model EntityLayer.Entities.Servisler
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Servis Kayıt</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="Edit">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputEmail1">Servis Ad</label>
                <input type="text" asp-for="@Model.Servis_Ad" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Servis_Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Kategori Seçiniz</label>
                <input type="text" asp-for="@Model.Kategori_Id" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Kategori_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Fiyat</label>
                <input type="text" asp-for="@Model.Fiyat" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Resim Ekle</label>
                <input type="text" asp-for="@Model.Servis_Image" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Servis_Image" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>


