@model IEnumerable<EntityLayer.Entities.Roller>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Index</h1>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Rol Listesi</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <a asp-action="Create" asp-controller="Roller" class="btn btn-primary">Yeni</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Rol Adı</th>
                    
                    <th style="width: 40px">Düzelt</th>
                    <th style="width: 40px">Silme</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
            @foreach(var item in Model)
            {
                    <tr>
                        <td>@i.</td>
                        <td>@item.Rol_Ad</td>
                        
                        <td><a class="btn btn-success" asp-action="Edit" asp-controller="Roller" asp-route-Id="@item.Rol_Id">Düzelt</a></td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Roller" asp-route-Id="@item.Rol_Id">Silme</a></td>
                    </tr>

                    i++;

                }
               

              
               
               
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>