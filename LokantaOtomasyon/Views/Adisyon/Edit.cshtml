@model EntityLayer.Entities.Adisyon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Servis Kayıt</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="Edit">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Adisyon_Id"/>
                <label for="exampleInputEmail1">Siparişler</label>
                <input type="text" asp-for="@Model.Siparis_Id" class="form-control" id="exampleInputEmail1" placeholder="Siparisler">
                <span asp-validation-for="@Model.Siparis_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Servisler</label>
                <input type="text" asp-for="@Model.Servis_Id" class="form-control" id="exampleInputEmail1" placeholder="Servisler">
                <span asp-validation-for="@Model.Servis_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Adet</label>
                <input type="text" asp-for="@Model.Adet" class="form-control" id="exampleInputEmail1" placeholder="Adet">
                <span asp-validation-for="@Model.Adet" class="text-danger"></span>
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>


