@model EntityLayer.Entities.Siparisler
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Servis Kayıt</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="Edit">
        <div class="card-body">
            <input type="hidden" asp-for="Siparis_Id"/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputEmail1">Masalar</label>
                <input type="text" asp-for="@Model.Masa_Id" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Masa_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Açılış Tarihi</label>
                <input type="text" asp-for="@Model.Acilis" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Acilis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Kapanış</label>
                <input type="text" asp-for="@Model.Kapanis" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Kapanis" class="text-danger"></span>
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>


