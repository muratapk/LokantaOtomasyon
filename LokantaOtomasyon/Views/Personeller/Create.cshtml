@model EntityLayer.Entities.Personeller
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Personel Kayıt</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="Create">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="exampleInputEmail1">Adı Soyadı</label>
                <input type="text" asp-for="@Model.AdSoyad" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Masa Seçiniz</label>
                <input type="text" asp-for="@Model.Masa_Id" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Masa_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Rol Seçiniz</label>
                <input type="text" asp-for="@Model.Rol_Id" class="form-control" id="exampleInputEmail1" placeholder="Masa Adını Girin">
                <span asp-validation-for="@Model.Rol_Id" class="text-danger"></span>
            </div>
          
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>

